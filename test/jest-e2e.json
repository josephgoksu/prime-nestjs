{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@auth/(.*)$": "<rootDir>/../src/auth/$1",
    "^@users/(.*)$": "<rootDir>/../src/users/$1",
    "^@tasks/(.*)$": "<rootDir>/../src/tasks/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1"
  }
}
